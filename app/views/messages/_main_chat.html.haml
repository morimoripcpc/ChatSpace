.chat
  .main-header
    .main-header__c
    
      .main-header__c__a
        = @group.name
      .main-header__c__b
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group) ,class:'edit'do
      .main-header__d  
      
        Edit
      .edit
          

  .main-content
    = render @messages

  .main-footer    
    .new__message
      .form
        = form_for [@group, @message],{html: {class: 'form__form'}} do |f|
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'form__mask__file'
          = f.submit 'Send', class: 'form__submit'




  